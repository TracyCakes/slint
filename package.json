{
  "name": "slint",
  "version": "0.1.3",
  "repository": "https://github.com/nusability/slint",
  "description": "A linter for Sketch files",
  "engines": {
    "sketch": ">=3.0"
  },
  "skpm": {
    "name": "Slint",
    "manifest": "src/manifest.json",
    "appcast": "https://api.sketchpacks.com/v1/plugins/in.nann.slint/appcast",
    "main": "slint.sketchplugin",
    "assets": [
      "assets/**/*"
    ],
    "sketch-assets-file": "sketch-assets/icons.sketch"
  },
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch",
    "postinstall": "npm run build && skpm-link"
  },
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@skpm/builder": "^0.7.7",
    "@skpm/extract-loader": "^2.0.2",
    "css-loader": "^3.2.0",
    "html-loader": "^0.5.5"
  },
  "resources": [
    "resources/**/*.js"
  ],
  "dependencies": {
    "sketch-module-web-view": "^3.1.4"
  },
  "author": "Johannes Nanninga <slint@nann.in>"
}
